---
/**
 * Hero - Presentation section with name and bio
 */
import { getLangFromUrl, t } from "../i18n/translations";
import HeroTypewriter from "./HeroTypewriter.astro";

const lang = getLangFromUrl(Astro.url);

// Textos
const greeting = t(lang, "hero.greeting");
const name = t(lang, "hero.name");
const description = t(lang, "hero.description");
---

<section class="hero">
  <p class="hero-text">
    <HeroTypewriter greeting={greeting} name={name} speed={90} delay={200} />,
    {description}
  </p>
</section>

<style>
  .hero {
    padding: 2rem 0 2rem;
    margin-bottom: 2.5rem;
    min-height: 120px;
  }

  .hero-text {
    font-size: 1rem;
    line-height: 2;
    color: var(--text-secondary);
    max-width: 100%;
    text-align: left;
  }
</style>

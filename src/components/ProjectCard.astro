---
/**
 * ProjectCard - Horizontal list style like pheralb.dev
 */
interface Tag {
  name: string;
  icon?: string;
  color?: string;
}

interface Props {
  name: string;
  description: string;
  url?: string;
  github?: string;
  icon?: string;
  emoji?: string;
  tags?: Tag[];
  updated?: boolean;
}

const {
  name,
  description,
  url,
  github,
  icon,
  emoji,
  tags = [],
  updated = false,
} = Astro.props;
---

<article class="project-card">
  <!-- Spotlight effect layers -->
  <div class="spotlight-bg"></div>
  <div class="spotlight-border"></div>

  <div class="card-inner">
    <!-- Main content row -->
    <div class="card-main">
      <!-- Left: Icon/Emoji -->
      <div class="project-icon-wrapper">
        {
          emoji ? (
            <span class="project-emoji">{emoji}</span>
          ) : icon ? (
            <span class="project-icon" set:html={icon} />
          ) : null
        }
      </div>

      <!-- Center: Content -->
      <div class="project-content">
        <!-- Title row -->
        <div class="title-row">
          {
            url ? (
              <a
                href={url}
                target="_blank"
                rel="noopener noreferrer"
                class="project-name"
              >
                {name}
                <span class="external-arrow">â†—</span>
              </a>
            ) : (
              <span class="project-name-text">{name}</span>
            )
          }

          {updated && <span class="badge-updated">updated</span>}
        </div>

        <!-- Description -->
        <p class="project-description">{description}</p>

        <!-- Tags -->
        {
          tags.length > 0 && (
            <div class="project-tags">
              {tags.map((tag) => (
                <span class="tech-tag">
                  {tag.icon && <span class="tech-icon" set:html={tag.icon} />}
                  <span class="tech-name">{tag.name}</span>
                </span>
              ))}
            </div>
          )
        }
      </div>
    </div>

    <!-- Right: GitHub link -->
    {
      github && (
        <a
          href={github}
          target="_blank"
          rel="noopener noreferrer"
          class="github-link"
          aria-label="View on GitHub"
          title="View on GitHub"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
          </svg>
        </a>
      )
    }
  </div>
</article>

<style>
  .project-card {
    position: relative;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 10px;
    overflow: hidden;
    transition: border-color 200ms ease;

    /* CSS Custom Properties for spotlight position */
    --mouse-x: 50%;
    --mouse-y: 50%;
    --spotlight-opacity: 0;
  }

  .project-card:hover {
    border-color: transparent;
  }

  /* Spotlight Background Glow - Light mode */
  .spotlight-bg {
    pointer-events: none;
    position: absolute;
    inset: 0;
    border-radius: inherit;
    opacity: var(--spotlight-opacity);
    transition: opacity 400ms ease;
    z-index: 1;
    background: radial-gradient(
      400px circle at var(--mouse-x) var(--mouse-y),
      rgba(120, 119, 198, 0.1),
      transparent 50%
    );
  }

  /* Spotlight Border Effect - Light mode */
  .spotlight-border {
    pointer-events: none;
    position: absolute;
    inset: 0;
    border-radius: inherit;
    opacity: var(--spotlight-opacity);
    transition: opacity 400ms ease;
    z-index: 2;
    padding: 1px;
    background: radial-gradient(
      300px circle at var(--mouse-x) var(--mouse-y),
      rgba(120, 119, 198, 0.4),
      transparent 60%
    );
    mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask-composite: exclude;
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
  }

  /* Dark Mode Spotlight Adjustments */
  :global(.dark) .spotlight-bg {
    background: radial-gradient(
      400px circle at var(--mouse-x) var(--mouse-y),
      rgba(255, 255, 255, 0.06),
      transparent 50%
    );
  }

  :global(.dark) .spotlight-border {
    background: radial-gradient(
      300px circle at var(--mouse-x) var(--mouse-y),
      rgba(255, 255, 255, 0.3),
      transparent 60%
    );
  }

  .card-inner {
    position: relative;
    z-index: 3;
    padding: 1rem 1.25rem;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
  }

  .card-main {
    display: flex;
    align-items: flex-start;
    gap: 0.875rem;
    flex: 1;
    min-width: 0;
  }

  /* Icon/Emoji */
  .project-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    margin-top: 0.125rem;
  }

  .project-emoji {
    font-size: 1.125rem;
    line-height: 1;
  }

  .project-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    color: var(--text-primary);
  }

  .project-icon :global(svg) {
    width: 20px;
    height: 20px;
  }

  /* Content */
  .project-content {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    flex: 1;
    min-width: 0;
  }

  .title-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .project-name,
  .project-name-text {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .project-name {
    text-decoration: none;
  }

  .project-name:hover {
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .external-arrow {
    font-size: 0.75rem;
    opacity: 0.5;
  }

  .badge-updated {
    font-size: 0.625rem;
    font-weight: 500;
    padding: 0.125rem 0.5rem;
    background: rgba(120, 119, 198, 0.15);
    border: 1px solid rgba(120, 119, 198, 0.3);
    border-radius: 9999px;
    color: var(--text-secondary);
    flex-shrink: 0;
  }

  /* Description */
  .project-description {
    font-size: 0.8125rem;
    color: var(--text-muted);
    line-height: 1.5;
    margin: 0;
  }

  /* Tags */
  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-top: 0.25rem;
  }

  .tech-tag {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.25rem 0.625rem;
    font-size: 0.6875rem;
    font-weight: 500;
    color: var(--text-secondary);
    background: rgba(0, 0, 0, 0.04);
    border: 1px solid var(--border-color);
    border-radius: 6px;
    transition:
      border-color 150ms ease,
      background-color 150ms ease;
  }

  .tech-tag:hover {
    border-color: var(--border-color-hover);
    background: rgba(0, 0, 0, 0.06);
  }

  :global(.dark) .tech-tag {
    background: rgba(255, 255, 255, 0.06);
    color: var(--text-secondary);
  }

  :global(.dark) .tech-tag:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .tech-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 12px;
    height: 12px;
    flex-shrink: 0;
  }

  .tech-icon :global(svg) {
    width: 12px;
    height: 12px;
  }

  /* GitHub Link */
  .github-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    color: var(--text-muted);
    border-radius: 6px;
    transition:
      color 150ms ease,
      background-color 150ms ease;
    flex-shrink: 0;
  }

  .github-link:hover {
    color: var(--text-primary);
    background: var(--bg-primary);
  }

  /* Mobile adjustments */
  @media (max-width: 640px) {
    .card-inner {
      padding: 0.875rem 1rem;
    }

    .project-content {
      gap: 0.5rem;
    }

    .project-tags {
      gap: 0.25rem;
    }

    .tech-tag {
      padding: 0.2rem 0.5rem;
      font-size: 0.625rem;
    }
  }
</style>

<script>
  function initSpotlight() {
    const cards = document.querySelectorAll(".project-card");

    cards.forEach((card) => {
      const htmlCard = card as HTMLElement;

      // Mouse move - update spotlight position
      htmlCard.addEventListener("mousemove", (e: MouseEvent) => {
        const rect = htmlCard.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;

        htmlCard.style.setProperty("--mouse-x", `${x}px`);
        htmlCard.style.setProperty("--mouse-y", `${y}px`);
      });

      // Mouse enter - show spotlight
      htmlCard.addEventListener("mouseenter", () => {
        htmlCard.style.setProperty("--spotlight-opacity", "1");
      });

      // Mouse leave - hide spotlight
      htmlCard.addEventListener("mouseleave", () => {
        htmlCard.style.setProperty("--spotlight-opacity", "0");
      });
    });
  }

  // Run on initial load
  initSpotlight();

  // Run on view transitions (Astro)
  document.addEventListener("astro:page-load", initSpotlight);
</script>

---
/**
 * ProjectCard - Individual project display card with spotlight effect
 * Inspired by pheralb.dev design
 */
interface Tag {
  name: string;
  icon?: string;
  color?: string;
}

interface Props {
  name: string;
  description: string;
  url?: string;
  github?: string;
  icon?: string;
  tags?: Tag[];
  updated?: boolean;
}

const {
  name,
  description,
  url,
  github,
  icon,
  tags = [],
  updated = false,
} = Astro.props;
---

<article class="project-card">
  <!-- Spotlight layers -->
  <div class="spotlight-bg"></div>
  <div class="spotlight-border"></div>

  <!-- Card content -->
  <div class="card-content">
    <div class="project-header">
      <div class="project-title-row">
        <div class="project-logo-title">
          {icon && <span class="project-icon" set:html={icon} />}
          <div class="title-group">
            {
              url ? (
                <a
                  href={url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="project-name"
                >
                  {name}
                  <span class="external-arrow">â†—</span>
                </a>
              ) : (
                <span class="project-name-text">{name}</span>
              )
            }
          </div>
        </div>
        <div class="actions">
          {updated && <span class="badge-updated">updated</span>}
          {
            github && (
              <a
                href={github}
                target="_blank"
                rel="noopener noreferrer"
                class="github-link"
                aria-label="View on GitHub"
                title="View on GitHub"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                </svg>
              </a>
            )
          }
        </div>
      </div>
    </div>

    <p class="project-description">{description}</p>

    {
      tags.length > 0 && (
        <div class="project-tags">
          {tags.map((tag) => (
            <span class="tech-tag">
              {tag.icon && <span class="tech-icon" set:html={tag.icon} />}
              <span class="tech-name">{tag.name}</span>
            </span>
          ))}
        </div>
      )
    }
  </div>
</article>

<style>
  /* ===== Card Base Styles ===== */
  .project-card {
    position: relative;
    display: flex;
    flex-direction: column;
    min-height: 140px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    overflow: hidden;
    transition: border-color 200ms ease;

    /* CSS Custom Properties for mouse position */
    --mouse-x: 50%;
    --mouse-y: 50%;
    --spotlight-opacity: 0;
  }

  .project-card:hover {
    border-color: transparent;
  }

  /* ===== Spotlight Background Glow ===== */
  .spotlight-bg {
    pointer-events: none;
    position: absolute;
    inset: 0;
    border-radius: inherit;
    opacity: var(--spotlight-opacity);
    transition: opacity 400ms ease;
    z-index: 1;
    background: radial-gradient(
      400px circle at var(--mouse-x) var(--mouse-y),
      rgba(120, 119, 198, 0.08),
      transparent 50%
    );
  }

  /* ===== Spotlight Border Effect ===== */
  .spotlight-border {
    pointer-events: none;
    position: absolute;
    inset: 0;
    border-radius: inherit;
    opacity: var(--spotlight-opacity);
    transition: opacity 400ms ease;
    z-index: 2;

    /* Pseudo-border using padding + mask */
    padding: 1px;
    background: radial-gradient(
      300px circle at var(--mouse-x) var(--mouse-y),
      rgba(120, 119, 198, 0.5),
      transparent 60%
    );

    /* Mask to create border effect */
    mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask-composite: exclude;
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
  }

  /* ===== Dark Mode Adjustments ===== */
  .dark .spotlight-bg {
    background: radial-gradient(
      400px circle at var(--mouse-x) var(--mouse-y),
      rgba(255, 255, 255, 0.06),
      transparent 50%
    );
  }

  .dark .spotlight-border {
    background: radial-gradient(
      300px circle at var(--mouse-x) var(--mouse-y),
      rgba(255, 255, 255, 0.4),
      transparent 60%
    );
  }

  /* ===== Card Content ===== */
  .card-content {
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
    padding: 1rem 1.125rem;
    height: 100%;
  }

  .project-header {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .project-title-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .project-logo-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .title-group {
    display: flex;
    flex-direction: column;
  }

  .actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .project-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    color: var(--text-primary);
  }

  .project-icon :global(svg) {
    width: 20px;
    height: 20px;
  }

  .project-name {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    text-decoration: none;
    transition: color 150ms ease;
  }

  .project-name:hover {
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .project-name-text {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .external-arrow {
    font-size: 0.75rem;
    margin-left: 0.125rem;
    opacity: 0.5;
    transition: opacity 150ms ease;
  }

  .project-name:hover .external-arrow {
    opacity: 0.8;
  }

  .badge-updated {
    font-size: 0.625rem;
    font-weight: 500;
    padding: 0.125rem 0.5rem;
    background: linear-gradient(
      135deg,
      rgba(120, 119, 198, 0.15),
      rgba(120, 119, 198, 0.05)
    );
    border: 1px solid rgba(120, 119, 198, 0.3);
    border-radius: 9999px;
    color: var(--text-secondary);
    text-transform: lowercase;
  }

  .github-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    color: var(--text-muted);
    border-radius: 8px;
    transition:
      color 150ms ease,
      background-color 150ms ease;
  }

  .github-link:hover {
    color: var(--text-primary);
    background: var(--bg-primary);
  }

  .github-link svg {
    width: 18px;
    height: 18px;
  }

  .project-description {
    font-size: 0.875rem;
    color: var(--text-muted);
    line-height: 1.6;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .project-tags {
    display: flex;
    flex-wrap: nowrap;
    gap: 0.5rem;
    margin-top: auto;
    padding-top: 0.75rem;
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
    /* Fade mask for scrolling overflow */
    mask-image: linear-gradient(to right, black 85%, transparent 100%);
    -webkit-mask-image: linear-gradient(to right, black 85%, transparent 100%);
  }

  .project-tags::-webkit-scrollbar {
    display: none;
  }

  /* ===== Technology Tags ===== */
  .tech-tag {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.25rem 0.625rem;
    font-size: 0.7rem;
    font-weight: 500;
    font-family: var(--font-mono);
    letter-spacing: 0.02em;
    color: var(--text-primary);
    background: transparent;
    border: 1px solid var(--border-color);
    border-radius: 6px;
    transition:
      border-color 150ms ease,
      background-color 150ms ease;
  }

  .tech-tag:hover {
    border-color: var(--border-color-hover);
    background: var(--bg-card-hover);
  }

  .tech-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  .tech-icon :global(svg) {
    width: 16px;
    height: 16px;
  }

  .tech-name {
    white-space: nowrap;
  }
</style>

<script>
  function initSpotlight() {
    const cards = document.querySelectorAll(".project-card");

    cards.forEach((card) => {
      const htmlCard = card as HTMLElement;

      // Mouse move - update spotlight position
      htmlCard.addEventListener("mousemove", (e: MouseEvent) => {
        const rect = htmlCard.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;

        htmlCard.style.setProperty("--mouse-x", `${x}px`);
        htmlCard.style.setProperty("--mouse-y", `${y}px`);
      });

      // Mouse enter - show spotlight
      htmlCard.addEventListener("mouseenter", () => {
        htmlCard.style.setProperty("--spotlight-opacity", "1");
      });

      // Mouse leave - hide spotlight
      htmlCard.addEventListener("mouseleave", () => {
        htmlCard.style.setProperty("--spotlight-opacity", "0");
      });
    });
  }

  // Run on initial load
  initSpotlight();

  // Run on view transitions
  document.addEventListener("astro:page-load", initSpotlight);
</script>
